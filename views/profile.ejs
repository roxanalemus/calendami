<!doctype html>
<html>
<head>
    <title>Calendami</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link rel="stylesheet" href="profile.css">

</head>
<body>

	<main>

		<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-2">

			<div class="container-fluid">

				<img class="img-thumbnail text-center" src="img/friendship-day-1.png">

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">

						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="#">Home</a>
						</li>

						<li class="nav-item">
							<a href="/calendar" class="nav-link btn btn-default btn-sm">All Events</a>
						</li>

						<li class="nav-item">
							<a href="/logout" class="nav-link btn btn-default btn-sm">Logout</a>
						</li>
					
					</ul>

					<form class="d-flex" method="get" action="/search">
					<input name="search" class="form-control me-2" type="search" placeholder="Friend Search" aria-label="Search">
					<button class="btn btn-outline-success" type="submit">Search</button>
					</form>
				</div>
			</div>
		</nav>


		<div class="container hello text-center">
			<h1>Hello, friend.</h1>
		</div>

		<div class="container">

			<section class="upcoming text-center mt-6">
				<h3>Upcoming...</h3>
				<ul class="messages list-group">
					<% for(var i=0; i<entries.length; i++) {%>
						<li class="message list-group-item">
							<span class="date"><%= entries[i].time %></span>
							<span><%= entries[i].name %></span>
						</li>
					<% } %>
				</ul>
			</section>

			<section class="inputs">
				<!-- Reminders -->
				<div>
					<h2 class="mx-4">Who do you want to reach out to next?</h2>
					
					<% if (user.local.email) { %>
						<form class="row g-3 mt-4" action="/entries" method="POST">
							<div class="col-md-6">
								<label for="friendsName" class="form-label">Friend's Name</label>
								<input type="text" class="form-control" name="name"  placeholder="Natalia" required=''>
							</div>

							<div class="col-md-6">
								<label for="startDate" class="form-label">When do you want to start?</label>
								<input type="date" name="time" value="moment(appointment.time).format('YYYY-MM-DD hh:mma')" class="form-control">
							</div>

							<div class="col-md-6">
								<label for="frquency">How often do you want to reach out?</label>
								<select name="frequency">
									<option value="Single Event" class="dropdown-item">Single Event</option>
									<option value="Biweekly" class="dropdown-item">Biweekly</option>
									<option value="Monthly" class="dropdown-item">Monthly</option>
								</select>
							</div>

							<button type="submit" class="col-md-6">Submit</button>
							
						</form>
					<% } %>

				</div>
				
			</section>

		</div>
</main>

</body>
</html>
